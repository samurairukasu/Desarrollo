                            ' and  ti.inspfina=''S''   and td.dvdomino='+#39+trim(PatenteNueva.Patente)+#39+
                            '  TI.RESULTAD=''A''  and td.turnoid='+inttostr(CODTURNOID)+
                           ' and TI.CODVEHIC =TD.CODVEHIC and ti.codinspe=td.codinspe ') ;

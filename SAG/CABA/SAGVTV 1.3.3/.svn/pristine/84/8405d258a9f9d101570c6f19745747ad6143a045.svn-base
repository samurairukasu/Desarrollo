    function TFDominios.TIENE_TURNO(PATENTE:STRING):BOOLEAN;
    var varSql:string;
    BEGIN
      
       CODTURNOID:=-1;
        with TSQLQuery.Create(application) do
         try
            SQLConnection:=MYBD;
           // SQL.Add('SELECT TURNOID,codvehic FROM TDATOSTURNO  WHERE TO_CHAR(FECHATURNO,''DD/MM/YYYY'') = to_char(SYSDATE,''DD/MM/YYYY'')  and estadoid IN (1,7) and  DVDOMINO = '+#39+trim(PATENTE)+#39);
        SQl.clear;
        varSql:='SELECT  MAX(TURNOID) AS TURNOID, codvehic,PAGOIDVERIFICACION, tipoturno FROM TDATOSTURNO  '+
                '  WHERE TO_CHAR(FECHATURNO,''DD/MM/YYYY'') = to_char(SYSDATE,''DD/MM/YYYY'')  and estadoid IN (1,7,3) and  DVDOMINO = '''+trim(PATENTE)+''' '+
                ' GROUP BY  CODVEHIC,PAGOIDVERIFICACION,tipoturno';
        SQL.ADD(varSql);
            Open;
            if FIELDS[0].ASINTEGER>0 then
            begin
               CODTURNOID:=FIELDS[0].ASINTEGER;

               if  trim(FIELDS[2].ASstring)='' then
                 PAGOIDVERIFICACION_TURNO_INGRESO:=-1
               else
                   PAGOIDVERIFICACION_TURNO_INGRESO:=FIELDS[2].ASINTEGER;

               TIENE_TURNO:=TRUE;

           end else
           //CODTURNOID:=FIELDS[0].ASINTEGER;
            TIENE_TURNO:=FALSE;


         finally
            Close;
            Free;
        end;

    END;

    
    function TFDominios.TIENE_TIENE_FACTURA(IDPAGOFERIFICACION:LONGINT):BOOLEAN;
    var varSql:string;
    notacredito,tienefactura:boolean;
    BEGIN
     tienefactura:=false;

        with TSQLQuery.Create(application) do
         try
            SQLConnection:=MYBD;
            SQl.clear;
            varSql:='SELECT codcofac FROM TFACTURAS WHERE  IDPAGO='+INTTOSTR(IDPAGOFERIFICACION);
            SQL.ADD(varSql);
            Open;
             while not eof do
              begin
                tienefactura:=true;
                 if trim(fields[0].asstring)='' then
                  begin
                     TIENE_TIENE_FACTURA:=TRUE;
                     break;
                  end     ELSE
                      begin
                        Application.MessageBox( 'ESTE VEHICULO TIENE UNA NOTA DE CREDITO ASOCIADA.',
                                                 'ATENCION', MB_ICONSTOP );
                      TIENE_TIENE_FACTURA:=FALSE;
                      break;
                      end;

               next;
             end;


          if tienefactura=false  then
             begin
                 {forzar el ingreso por contraseña}
                 Application.MessageBox( 'ESTE VEHICULO NO HA SIDO FACTURADO. COMUNIQUESE CON SISTEMAS.','ATENCION', MB_ICONSTOP );
                 TIENE_TIENE_FACTURA:=TRUE;
             end;


         finally
            Close;
            Free;
        end;

    END;



